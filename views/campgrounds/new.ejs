<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Create New Campground</h1>
        <div style="width: 30%; margin: 25px auto">
        <form action="/campgrounds" method="post">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Title" value="" name="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="Price" value="" name="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="ImageUrl" value="" name="Image">
            </div>
            <div class="form-group form-outline">
                <textarea name="description" placeholder="Descrição" class="form-control" id="textAreaExample1" rows="4"></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Criar">
            </div>
        </form>
        <a class="" href="/campgrounds">Voltar</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>