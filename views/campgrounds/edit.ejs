<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.name %>" name="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="Price" value="<%= campground.price %>" name="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.Image %>" name="Image">
            </div>
            <div class="form-group form-outline">
                <textarea name="description"  value="" class="form-control" id="textAreaExample1" rows="4"><%= campground.description %></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Actualizar">
            </div>
        </form>
        <a class="" href="/campgrounds/<%= campground._id %>">Voltar</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>